<div class="input-group auth-pass-inputgroup">
    <input type="password" name="{{ widget.name }}" class="{{ widget.attrs.class }}"
           placeholder="{{ widget.attrs.placeholder }}" id="{{ widget.attrs.id }}"
           {% if widget.attrs.required %}required{% endif %}>
    <button class="btn btn-light" type="button" id="{{ widget.attrs.addon }}"><i class="mdi mdi-eye-outline"></i></button>
</div>
